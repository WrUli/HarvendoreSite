{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="register-container">
    <h1 class="register-title">Cr√©er son compte</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
        {{ form_row(registrationForm.name, {'attr': {'class': 'register-input'}}) }}
        {{ form_row(registrationForm.email, {'attr': {'class': 'register-input'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            'label': 'Password',
            'attr': {'class': 'register-input'}
        }) }}
        <button type="submit" class="register-button">S'enregistrer</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}